{
    "root": true,
    "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "all"
        }
    },
    "linter": {
        "enabled": true,
        "rules": { "recommended": true }
    },
    "assist": {
        "enabled": true
    }
}
