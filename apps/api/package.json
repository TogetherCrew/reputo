{
    "name": "@reputo/api",
    "version": "1.0.0",
    "description": "API for the Reputo ecosystem",
    "private": true,
    "scripts": {
        "build": "nest build",
        "start": "node dist/main",
        "start:dev": "nest start",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "check": "pnpm exec biome check --write",
        "format": "pnpm exec biome format --write",
        "lint": "pnpm exec biome lint --write",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:cov": "vitest --coverage",
        "test:e2e": "vitest --config vitest.config.e2e.ts",
        "test:e2e:watch": "vitest --config vitest.config.e2e.ts --watch",
        "dev": "pnpm run start:dev",
        "release": "semantic-release",
        "releaseAPI": "semantic-release",
        "clean": "rm -rf coverage dist docs node_modules tsconfig.tsbuildinfo"
    },
    "dependencies": {
        "@nestjs/common": "11.0.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "11.0.1",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/platform-express": "11.0.1",
        "@nestjs/swagger": "^11.2.1",
        "@reputo/database": "workspace:*",
        "@reputo/reputation-algorithms": "workspace:*",
        "@scalar/nestjs-api-reference": "^1.0.5",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "compression": "1.8.1",
        "helmet": "8.1.0",
        "joi": "^18.0.1",
        "mongoose": "^8.8.4",
        "nestjs-pino": "4.4.1",
        "pino-pretty": "13.1.2",
        "reflect-metadata": "0.2.2",
        "rxjs": "7.8.2",
        "zod": "4.1.12"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "19.8.1",
        "@eslint/eslintrc": "3.2.0",
        "@faker-js/faker": "^10.1.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@swc/cli": "^0.6.0",
        "@swc/core": "^1.12.7",
        "@types/express": "^5.0.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.10.7",
        "@types/supertest": "^6.0.3",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/spy": "^3.2.4",
        "globals": "^16.0.0",
        "mongodb-memory-server": "^10.2.3",
        "prettier": "^3.4.2",
        "semantic-release-commits-lint": "^1.1.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.4",
        "ts-loader": "9.5.2",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.9.2",
        "unplugin-swc": "1.5.5",
        "vitest": "3.2.4"
    },
    "files": [
        "dist/**"
    ],
    "author": {
        "name": "Behzad Rabiei",
        "url": "https://github.com/Behzad-rabiei"
    },
    "license": "GPL-3.0",
    "packageManager": "pnpm@10.12.4"
}
