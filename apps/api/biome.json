{
    "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
    "root": false,
    "extends": "//",
    "files": {
        "includes": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "linter": {
        "rules": {
            "recommended": true,
            "style": {
                "useImportType": "off"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            }
        }
    },
    "overrides": [
        {
            "includes": ["tests/**/*.ts"],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noExplicitAny": "off"
                    }
                }
            }
        }
    ]
}
