{
    "name": "@reputo/algorithm-validator",
    "version": "0.0.0",
    "description": "Shared Zod-based validation library for the Reputo ecosystem. Provides schema building, payload validation, and CSV content validation that runs identically on both client and server.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "private": true,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "type": "module",
    "module": "dist/index.js",
    "scripts": {
        "check": "pnpm exec biome check --write",
        "lint": "pnpm exec biome lint --write",
        "format": "pnpm exec biome format --write",
        "test": "vitest run",
        "test:watch": "vitest --watch",
        "test:cov": "vitest --coverage",
        "typecheck": "tsc --noEmit",
        "build": "tsc",
        "docs": "typedoc",
        "clean": "rm -rf coverage dist docs node_modules tsconfig.tsbuildinfo"
    },
    "dependencies": {
        "@reputo/reputation-algorithms": "workspace:*",
        "zod": "^4.1.0"
    },
    "devDependencies": {
        "@types/node": "^22.17.0",
        "typedoc": "^0.28.13",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "5.9.2",
        "vitest": "3.2.4"
    },
    "keywords": [
        "typescript",
        "validation",
        "zod",
        "schema"
    ],
    "files": [
        "dist",
        "!dist/**/*.test.*"
    ],
    "author": {
        "name": "Behzad Rabiei",
        "url": "https://github.com/Behzad-rabiei"
    },
    "license": "GPL-3.0",
    "packageManager": "pnpm@10.12.4"
}
