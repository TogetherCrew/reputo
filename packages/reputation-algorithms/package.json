{
    "name": "@reputo/reputation-algorithms",
    "version": "0.0.0",
    "description": "Framework-agnostic TypeScript library for describing, validating, and discovering versioned algorithm definitions via a read-only registry. JSON Schemaâ€“driven, Ajv-validated, identical API in Node and the browser; no code execution.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "private": "true",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "type": "module",
    "module": "dist/index.js",
    "scripts": {
        "check": "pnpm exec biome check --write",
        "format": "pnpm exec biome format --write",
        "lint": "pnpm exec biome lint --write",
        "build": "tsc -p tsconfig.json",
        "prebuild": "pnpm compile:validator && pnpm gen:registry",
        "compile:validator": "node --loader jiti/esm ./src/build/compile-validator.ts",
        "gen:registry": "node --loader jiti/esm ./src/build/gen-registry.ts",
        "algorithm:new": "node --loader jiti/esm ./src/build/scaffold-algorithm.ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:algorithms": "vitest run -t \"@registry\"",
        "release": "semantic-release"
    },
    "devDependencies": {
        "jiti": "^2.6.0",
        "typedoc": "^0.28.13",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "keywords": [
        "typescript",
        "algorithms",
        "reputation"
    ],
    "files": [
        "dist",
        "!dist/**/*.test.*"
    ],
    "author": {
        "name": "Behzad Rabiei",
        "url": "https://github.com/Behzad-rabiei"
    },
    "license": "GPL-3.0",
    "packageManager": "pnpm@10.12.4"
}
