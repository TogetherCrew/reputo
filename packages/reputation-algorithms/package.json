{
    "name": "@reputo/reputation-algorithms",
    "version": "0.0.0",
    "description": "Framework-agnostic TypeScript library for describing, validating, and discovering versioned algorithm definitions via a read-only registry. JSON Schemaâ€“driven, Ajv-validated, identical API in Node and the browser; no code execution.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "private": true,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./api": {
            "types": "./dist/api/index.d.ts",
            "default": "./dist/api/index.js"
        },
        "./api/registry": {
            "types": "./dist/api/registry.d.ts",
            "default": "./dist/api/registry.js"
        }
    },
    "type": "module",
    "module": "dist/index.js",
    "scripts": {
        "check": "pnpm exec biome check --write",
        "format": "pnpm exec biome format --write",
        "lint": "pnpm exec biome lint --write",
        "registry:build": "tsx src/cli/build-registry.ts",
        "algorithm:create": "tsx src/cli/create-algorithm.ts",
        "registry:validate": "tsx src/cli/validate-registry.ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit",
        "prebuild": "pnpm registry:validate && pnpm registry:build",
        "build": "tsc",
        "release": "semantic-release",
        "docs": "typedoc",
        "clean": "rm -rf coverage dist docs node_modules tsconfig.tsbuildinfo"
    },
    "devDependencies": {
        "ajv": "^8.17.1",
        "ajv-formats": "^3.0.1",
        "jiti": "^2.6.0",
        "tsx": "^4.7.0",
        "typedoc": "^0.28.13",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "keywords": [
        "typescript",
        "algorithms",
        "reputation"
    ],
    "files": [
        "dist",
        "!dist/**/*.test.*"
    ],
    "author": {
        "name": "Behzad Rabiei",
        "url": "https://github.com/Behzad-rabiei"
    },
    "license": "GPL-3.0",
    "packageManager": "pnpm@10.12.4"
}
